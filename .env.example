# ========================================
# Product API Environment Variables
# ========================================
# Copy this file to .env and update values as needed

# ----------------------------------------
# API Configuration
# ----------------------------------------
# Port on which the API service will listen
API_PORT=8080

# Host address for the API service (0.0.0.0 allows external connections)
API_HOST=0.0.0.0

# ----------------------------------------
# Redis Configuration
# ----------------------------------------
# Hostname of the Redis server (use 'redis' for Docker Compose, 'localhost' for local dev)
REDIS_HOST=redis

# Port of the Redis server
REDIS_PORT=6379

# Redis database number (0-15)
REDIS_DB=0

# Default time-to-live for cached entries in seconds
# 3600 = 1 hour, 7200 = 2 hours, 86400 = 24 hours
CACHE_TTL_SECONDS=3600

# ----------------------------------------
# Database Configuration
# ----------------------------------------
# Database connection URL
# SQLite (default): sqlite:///./products.db
# PostgreSQL: postgresql://user:password@localhost:5432/productdb
# MySQL: mysql+pymysql://user:password@localhost:3306/productdb
DATABASE_URL=sqlite:///./products.db

# ----------------------------------------
# Application Settings
# ----------------------------------------
# Enable debug mode (true/false)
# WARNING: Do not use debug mode in production
DEBUG=false
